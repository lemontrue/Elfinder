<div class="result">
    <h2>Результаты работы</h2>
    <div class="box">
        <div class="state {{#if lineError}}result{{else}}ready{{/if}}"></div>

        <div class="body">

            {{#if globError.status}}
                <div style="">{{globError.message}}</div>
            {{/if}}

            <ul class="file-list">
                {{#each result.files}}
                    <li class="item">

                        <div class="file-info">
                            {{#if fileName}}
                                <div class="name" title="{{fileName}}">
                                    {{#if isTest}}<span class="test-certificate-icon no-padding js-test-file-tip" id="testTip-{{id}}"></span>{{/if}}
                                    <!--{{#if icon}}
                                        <div class="icon {{icon}}"></div>
                                    {{/if}}-->
                                    {{#if hideView}}
                                        {{aligningText fileName 47}}
                                    {{else}}
                                        <a can-click="event.view_file" href="#">{{aligningText fileName 47}}</a>
                                    {{/if}}
                                    <div can-click="event.view_file" class="visual {{#if hideView}} hidden {{/if}}" ></div>
                                    <div can-click="event.download_file" class="download"></div>
                                    <div can-click="event.remove" class="delete"></div>
                                </div>
                            {{/if}}

                          {{#if encryptedName}}
                              <div class="sig">
                                Подписанный файл:
                                <div class="name" title="{{encryptedName}}">{{aligningText encryptedName 47}}
                                  <div can-click="event.download_encrypted" class="download"></div>
                                  <div can-click="event.remove_encrypted" class="delete"></div>
                                </div>
                              </div>
                          {{/if}}


                          <div class="sig">
                                {{sourceType}}
                                <div class="name" title="{{sourcefileName}}">{{aligningText sourcefileName 47}}
                                    <div can-click="event.download_source" class="download"></div>
                                </div>
                            </div>

                            {{#if showLink}}
                                <ul class="param list-inline">
                                    <li can-click="event.more">Подробнее</li>
                                </ul>
                            {{/if}}

                        </div>

                        <div class="actions status">
                            {{#if error}}
                                <span class="info error">{{errorMes}}</span>
                            {{else}}
                                {{#if isEncSig}}
                                    <span class="info success">Успешно расшифрован и проверен</span>
                                {{else}}
                                    <span class="info success">Успешно расшифрован</span>
                                {{/if}}
                            {{/if}}
                        </div>

                        <div class="more {{#if isMoreShow}}show{{/if}}">
                            {{#if error}}
                                <div class="error">{{errorMessage}}</div>
                            {{else}}
                                {{#each sertInfo}}
                                    <div>
                                    <ul class="sig_info">
                                        <li>
                                            <div class="key">Тип:</div>
                                            <div class="value">{{type}}</div>
                                        </li>
                                        <li>
                                            <div class="key">Отпечаток:</div>
                                            <div class="value">{{thumbprint}}</div>
                                        </li>
                                        <li>
                                            <div class="key">Владелец сертификата:</div>
                                            <div class="value">{{recipient}}</div>
                                        </li>
                                        <li>
                                            <div class="key">Издатель:</div>
                                            <div class="value">{{issureName}}</div>
                                        </li>
                                        <li>
                                            <div class="key">Действителен с:</div>
                                            <div class="value">{{notBefore}}</div>
                                        </li>
                                        <li>
                                            <div class="key">Действителен до:</div>
                                            <div class="value">{{notAfter}}</div>
                                            {{#if certError}}
                                                <div class="cert_time_error">Срок действия сертификата или одного из сертификатов в цепочке истек или не наступил</div>
                                            {{/if}}
                                        </li>
                                    </ul>
                                    {{#if isTest}}
                                        <div class="test-certificate"></div>
                                    {{/if}}
                                    </div>
                                {{/each}}
                            {{/if}}

                        </div>
                    </li>
                {{/each}}
            </ul>

        </div>
    </div>
</div>

<div class="row footer">
    <div can-click="event.backFiles" class="c-500 a">Вернуться в каталог файлов</div>
    <div can-click="event.refiles" class="c-500 b">Повторить операцию с начала</div>
</div>