@model CryptxOnline.Web.Models.Visualization.OfficeVisualizationModel


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    @Html.Label(Model.ErrorMessage)
}
else
{
    <style>
        body {margin:0 !important;}
    </style>

    <div id="OfficeFrameDiv" sandbox="allow-same-origin || allow-top-navigation || allow-forms || allow-scripts" style="overflow: hidden; padding: 0;">
        <iframe id="OfficeFrame" src="@Model.VisualizationUri" width="100%" height="100%" marginheight="0" marginwidth="0" frameborder="0"></iframe>
    </div>
}